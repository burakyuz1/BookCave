@model CartViewModel

<div class="right-sidebar site-content overflow-hidden" id="content">
    <div class="container">
        @if (Model.CartLines.Count > 0)
        {
            <header class="entry-header space-top-2 space-bottom-1 mb-2">
                <div class="row">
                    <div class="col-md-6">
                        <h1 class="entry-title font-size-7">Your cart: @Model.TotalCartLines items</h1>

                    </div>
                    <div class="col-md-6">
                    </div>

                </div>
            </header>
            <div class="position-relative">
                <form class="d-inline-block position-absolute ml-12" id="remove-cart-form" asp-controller="Cart" asp-action="Remove" method="post">
                    <a id="remove-cart" href="#" class="border-gray-210 checkout-button mb-4 button alt wc-forward btn btn-dark rounded-0 py-4">Clear All</a>
                </form>

                <form id="update-form" asp-controller="Cart" asp-action="UpdateCart" method="post">


                    <a  id="update-products" href="#" class="border-gray-210 checkout-button mb-4 button alt wc-forward btn btn-dark rounded-0 py-4">Update</a>
                    <div class="row pb-8">
                        <div id="primary" class="content-area">


                            <main id="main" class="site-main">
                                <div class="page type-page status-publish hentry">
                                    <div class="entry-content">
                                        <div class="woocommerce">
                                            <table class="shop_table shop_table_responsive cart woocommerce-cart-form__contents">
                                                <thead>
                                                    <tr>
                                                        <th class="product-name">Book</th>
                                                        <th class="product-price">Price</th>
                                                        <th class="product-quantity">Quantity</th>
                                                        <th class="product-subtotal">Total</th>
                                                        <th class="product-remove">&nbsp;</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.CartLines)
                                                    {
                                                        <tr class="woocommerce-cart-form__cart-item cart_item">
                                                            <td class="product-name" data-title="Product">
                                                                <div class="d-flex align-items-center">
                                                                    <a asp-controller="Book"asp-action="Index" asp-route-isbn="@item.ISBN">
                                                                        <img src="~/img/books/@item.PictureUri" style="height:80px" class="attachment-shop_thumbnail size-shop_thumbnail wp-post-image" alt="">
                                                                    </a>
                                                                    <div class="ml-3 m-w-200-lg-down">
                                                                        <a href="#">@item.BookName</a>
                                                                        <a href="#" class="text-gray-700 font-size-2 d-block" tabindex="0">@item.AuthorName</a>
                                                                    </div>
                                                                </div>
                                                            </td>
                                                            <td class="product-price" data-title="Price">
                                                                <span class="woocommerce-Price-amount amount"><span class="woocommerce-Price-currencySymbol">$</span>@item.UnitPrice</span>
                                                            </td>
                                                            <td class="product-quantity" data-title="Quantity">
                                                                <div class="quantity d-flex align-items-center">
                                                                    <div class="border px-3 width-120">
                                                                        <div class="js-quantity">
                                                                            <div class="d-flex align-items-center">
                                                                                <label class="screen-reader-text sr-only">Quantity</label>
                                                                                <input type="number" class="input-text qty text js-result form-control text-center border-0" step="1" min="1" max="100" name="quantities[@item.CartLineId]" value="@item.Quantity" title="Qty">
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </td>
                                                            <td class="product-subtotal" data-title="Total">
                                                                <span class="woocommerce-Price-amount amount"><span class="woocommerce-Price-currencySymbol">$</span>@item.TotalPrice</span>
                                                            </td>
                                                            <td class="product-remove">

                                                                <input type="hidden" name="cartLineId" value="@item.CartLineId" />
                                                                <a href="#" data-remove-item="@item.CartLineId" class="remove" aria-label="Remove this item">
                                                                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="15px" height="15px">
                                                                        <path fill-rule="evenodd" fill="rgb(22, 22, 25)" d="M15.011,13.899 L13.899,15.012 L7.500,8.613 L1.101,15.012 L-0.012,13.899 L6.387,7.500 L-0.012,1.101 L1.101,-0.012 L7.500,6.387 L13.899,-0.012 L15.011,1.101 L8.613,7.500 L15.011,13.899 Z"></path>
                                                                    </svg>
                                                                </a>
                                                            </td>

                                                        </tr>

                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </main>
                        </div>
                        <div id="secondary" class="sidebar cart-collaterals order-1" role="complementary">
                            <div id="cartAccordion" class="border border-gray-900 bg-white mb-5">
                                <div class="p-4d875 border">
                                    <div id="cartHeadingOne" class="cart-head">
                                        <a class="d-flex align-items-center justify-content-between text-dark" href="#" data-toggle="collapse" data-target="#cartCollapseOne" aria-expanded="true" aria-controls="cartCollapseOne">
                                            <h3 class="cart-title mb-0 font-weight-medium font-size-3">
                                                Cart Totals
                                            </h3>
                                            <svg class="mins" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="15px" height="2px">
                                                <path fill-rule="evenodd" fill="rgb(22, 22, 25)" d="M0.000,-0.000 L15.000,-0.000 L15.000,2.000 L0.000,2.000 L0.000,-0.000 Z"></path>
                                            </svg>
                                            <svg class="plus" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="15px" height="15px">
                                                <path fill-rule="evenodd" fill="rgb(22, 22, 25)" d="M15.000,8.000 L9.000,8.000 L9.000,15.000 L7.000,15.000 L7.000,8.000 L0.000,8.000 L0.000,6.000 L7.000,6.000 L7.000,-0.000 L9.000,-0.000 L9.000,6.000 L15.000,6.000 L15.000,8.000 Z"></path>
                                            </svg>
                                        </a>
                                    </div>
                                    <div id="cartCollapseOne" class="mt-4 cart-content collapse show" aria-labelledby="cartHeadingOne" data-parent="#cartAccordion">
                                        <table class="shop_table shop_table_responsive">
                                            <tbody>
                                                <tr class="cart-subtotal">
                                                    <th>Subtotal</th>
                                                    <td data-title="Subtotal">
                                                        <span class="woocommerce-Price-amount amount"><span class="woocommerce-Price-currencySymbol">$</span>@Model.TotalPrice</span>
                                                    </td>
                                                </tr>
                                                <tr class="order-shipping">
                                                    <th>Shipping</th>
                                                    <td data-title="Shipping">Free Shipping</td>
                                                </tr>
                                                <tr class="order-shipping">
                                                    <th>Taxes</th>
                                                    <td data-title="Shipping">%8</td>
                                                </tr>
                                                <tr class="order-shipping">
                                                    <th>Payment </th>
                                                    <td data-title="Shipping">Cash on Delivery</td>

                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>


                                <div class="p-4d875 border">
                                    <table class="shop_table shop_table_responsive">
                                        <tbody>
                                            <tr class="order-total">
                                                <th>Total</th>
                                                <td data-title="Total">
                                                    <strong><span class="woocommerce-Price-amount amount"><span class="woocommerce-Price-currencySymbol"></span>@((Model.TotalPrice * 1.08m).ToString("c2"))</span></strong>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="wc-proceed-to-checkout">
                                <a asp-controller="Cart" asp-action="Checkout" class="checkout-button button alt wc-forward btn btn-dark btn-block rounded-0 py-4">Proceed to checkout</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        }
        else
        {
            <div class="alert alert-warning" role="alert">
                <i class="fa-solid fa-circle-exclamation"></i>
                There are no books in your basket.                
            </div>
        }
    </div>
</div>


<form id="remove-form" asp-controller="Cart" asp-action="RemoveCartLine" method="post">
    <input id="cart-line-id" type="hidden" name="cartLineId" />
</form>


@section Scripts{
    <script>
        $("[data-remove-item]").click(function () {
            var cartLineId = $(this).data("remove-item");
            $("#cart-line-id").val(cartLineId);
            $("#remove-form").submit();
        })

        $("#remove-cart").click(() => {
            $("#remove-cart-form").submit();
        })

        $("#update-products").click(() => {
          
            $("#update-form").submit();
        })

    </script>
}
